import re

# Read the payloads from the file
with open('payloadxss.txt', 'r') as file:
    payloads = file.readlines()

# Define a regular expression pattern to modify the payloads
pattern = re.compile(r'(\b(?:alert|prompt|eval|javascript):\b)', re.IGNORECASE)

# Function to modify payloads using regular expressions
def modify_payloads(payloads):
    modified_payloads = []
    for payload in payloads:
        # Use re.sub to replace the matched patterns with desired modifications
        modified_payload = pattern.sub(r'\1_modified', payload)
        modified_payloads.append(modified_payload)
    return modified_payloads

# Modify the payloads
modified_payloads = modify_payloads(payloads)

# Save the modified payloads to a new file
with open('modified_payloadxss.txt', 'w') as file:
    file.writelines(modified_payloads)

# Print out the modified payloads
for payload in modified_payloads:
    print(payload)
